<script>
  (function () {
    if (typeof document === 'undefined') {
      return;
    }

    document.addEventListener('DOMContentLoaded', function () {
      const faqItems = document.querySelectorAll('.faq-item');
      if (!faqItems.length) {
        return;
      }

      faqItems.forEach((item) => {
        const question = item.querySelector('.faq-question');
        if (!question) {
          return;
        }

        question.addEventListener('click', function () {
          const isActive = item.classList.contains('active');

          faqItems.forEach((otherItem) => {
            if (otherItem !== item) {
              otherItem.classList.remove('active');
            }
          });

          if (isActive) {
            item.classList.remove('active');
          } else {
            item.classList.add('active');
          }
        });
      });
    });
  })();

  // Bundle Cart Functionality
  function addBundleToCart(bundleId) {
    const bundleCard = document.querySelector(`[data-bundle-id="${bundleId}"]`);
    if (!bundleCard) {
      console.error('Bundle card not found for ID:', bundleId);
      return;
    }

    const button = bundleCard.querySelector('.bundle-cta-btn');
    const productVariants = bundleCard.querySelectorAll('.product-variant-id');

    console.log('Bundle ID:', bundleId);
    console.log('Bundle card found:', bundleCard);
    console.log('Product variants found:', productVariants.length);
    console.log('Product variants:', productVariants);

    if (productVariants.length === 0) {
      console.error('No products configured for this bundle. Please contact support.');
      console.log('Available elements in bundle card:', bundleCard.innerHTML);
      showMessage('Bundle products need to be configured. Redirecting to shop...', 'info');
      // Show instructions for configuring products
      const bundleTitle = bundleCard.querySelector('.bundle-title')?.textContent || 'this bundle';
      showMessage(`Please configure products for ${bundleTitle} in the Shopify admin first.`, 'info');
      setTimeout(() => {
        window.location.href = '/collections/all?note=Bundle+configuration+required';
      }, 3000);
      return;
    }

    // Disable button and show loading state
    button.disabled = true;
    button.textContent = 'Adding to Cart...';

    // Collect all variant IDs and quantities
    const items = [];
    productVariants.forEach((variantInput) => {
      const quantityInput = variantInput.parentElement.querySelector('.product-quantity');
      const quantity = quantityInput ? parseInt(quantityInput.value) || 1 : 1;

      if (variantInput.value) {
        items.push({
          id: variantInput.value,
          quantity: quantity,
        });
      }
    });

    if (items.length === 0) {
      console.error('No valid products found in this bundle. Please contact support.');
      showMessage('No valid products found in this bundle. Please contact support.', 'error');
      button.disabled = false;
      button.textContent = 'Add Bundle & Choose Gift';
      return;
    }

    console.log('Adding items to cart:', items);

    // Add items to cart using Shopify AJAX API
    fetch('/cart/add.js', {
      method: 'POST',
      credentials: 'same-origin',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
        'X-Requested-With': 'XMLHttpRequest',
      },
      body: JSON.stringify({ items: items }),
    })
      .then((response) => {
        console.log('Response status:', response.status);
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
      })
      .then((data) => {
        console.log('Cart response:', data);
        if (data.status === 422 || data.errors) {
          console.error('Some products in this bundle are currently unavailable.', data.errors);
          showMessage('Some products in this bundle are currently unavailable. Please try again later.', 'error');
          return;
        }

        showMessage('Bundle added to cart successfully!', 'success');
        openAssortionSideCart();
      })
      .catch((error) => {
        console.error('Error adding bundle to cart:', error);
        showMessage('There was an error adding the bundle to your cart. Please try again.', 'error');
      })
      .finally(() => {
        // Re-enable button
        button.disabled = false;
        button.textContent = 'Add Bundle & Choose Gift';
      });
  }

  // Helper function to show messages instead of alert
  function showMessage(message, type = 'info') {
    // Try to use Shopify's notification system if available
    if (window.Shopify && window.Shopify.theme && window.Shopify.theme.notification) {
      window.Shopify.theme.notification.show(message, type);
    } else {
      // Fallback: create a simple notification
      const notification = document.createElement('div');
      notification.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 15px 20px;
        background: ${type === 'error' ? '#ff4444' : '#44ff44'};
        color: white;
