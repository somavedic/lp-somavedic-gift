<script>
  (function () {
    if (typeof document === 'undefined') {
      return;
    }

    document.addEventListener('DOMContentLoaded', function () {
      const faqItems = document.querySelectorAll('.faq-item');
      if (!faqItems.length) {
        return;
      }

      faqItems.forEach((item) => {
        const question = item.querySelector('.faq-question');
        if (!question) {
          return;
        }

        question.addEventListener('click', function () {
          const isActive = item.classList.contains('active');

          faqItems.forEach((otherItem) => {
            if (otherItem !== item) {
              otherItem.classList.remove('active');
            }
          });

          if (isActive) {
            item.classList.remove('active');
          } else {
            item.classList.add('active');
          }
        });
      });

      const bundleButtons = document.querySelectorAll('.bundle-cta-btn');
      bundleButtons.forEach((button) => {
        button.classList.add('bundle-cta-btn--ajax');
        button.addEventListener('click', (event) => {
          event.preventDefault();
          event.stopPropagation();
        });
      });
    });
  })();

  // Funkce košíku pro balíčky
  function addBundleToCart(bundleId) {
    const bundleCard = document.querySelector(`[data-bundle-id="${bundleId}"]`);
    if (!bundleCard) {
      console.error('Karta balíčku nebyla nalezena pro ID:', bundleId);
      return;
    }

    const button = bundleCard.querySelector('.bundle-cta-btn');
    const productVariants = bundleCard.querySelectorAll('.product-variant-id');

    console.log('ID balíčku:', bundleId);
    console.log('Karta balíčku nalezena:', bundleCard);
    console.log('Nalezené varianty produktů:', productVariants.length);
    console.log('Varianty produktů:', productVariants);

    if (productVariants.length === 0) {
      console.error('Pro tento balíček nejsou nakonfigurovány žádné produkty. Kontaktujte podporu.');
      console.log('Dostupné prvky v kartě balíčku:', bundleCard.innerHTML);
      showMessage('Produkty balíčku je třeba nejprve nakonfigurovat. Přesměrováváme do obchodu...', 'info');
      // Show instructions for configuring products
      const bundleTitle = bundleCard.querySelector('.bundle-title')?.textContent || 'this bundle';
      showMessage(`Nejprve prosím nakonfigurujte produkty pro ${bundleTitle} v administraci Shopify.`, 'info');
      setTimeout(() => {
        window.location.href = '/collections/all?note=Bundle+configuration+required';
      }, 3000);
      return;
    }

    // Disable button and show loading state
    button.disabled = true;
    button.textContent = 'Přidáváme do košíku...';

    // Collect all variant IDs and quantities
    const items = [];
    productVariants.forEach((variantInput) => {
      const quantityInput = variantInput.parentElement.querySelector('.product-quantity');
      const quantity = quantityInput ? parseInt(quantityInput.value) || 1 : 1;

      if (variantInput.value) {
        items.push({
          id: variantInput.value,
          quantity: quantity,
        });
      }
    });

    if (items.length === 0) {
      console.error('V tomto balíčku nebyly nalezeny platné produkty. Kontaktujte podporu.');
      showMessage('V tomto balíčku nebyly nalezeny platné produkty. Kontaktujte podporu.', 'error');
      button.disabled = false;
      button.textContent = 'Přidat balíček a vybrat dárek';
      return;
    }

    console.log('Přidáváme položky do košíku:', items);

    // Přidání položek do košíku pomocí Shopify AJAX API
    fetch('/cart/add.js', {
      method: 'POST',
      credentials: 'same-origin',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
        'X-Requested-With': 'XMLHttpRequest',
      },
      body: JSON.stringify({ items: items }),
    })
      .then((response) => {
        console.log('Stav odpovědi:', response.status);
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
      })
      .then((data) => {
        console.log('Odpověď košíku:', data);
        if (data.status === 422 || data.errors) {
          console.error('Některé produkty v tomto balíčku aktuálně nejsou dostupné.', data.errors);
          showMessage(
            'Některé produkty v tomto balíčku nejsou momentálně k dispozici. Zkuste to prosím později.',
            'error'
          );
          return;
        }

        showMessage('Balíček byl úspěšně přidán do košíku!', 'success');
        openAssortionSideCart();
      })
      .catch((error) => {
        console.error('Chyba při přidávání balíčku do košíku:', error);
        showMessage('Při přidávání balíčku do košíku došlo k chybě. Zkuste to prosím znovu.', 'error');
      })
      .finally(() => {
        // Re-enable button
        button.disabled = false;
        button.textContent = 'Přidat balíček a vybrat dárek';
      });
  }

  // Helper function to show messages instead of alert
  function showMessage(message, type = 'info') {
    // Try to use Shopify's notification system if available
    if (window.Shopify && window.Shopify.theme && window.Shopify.theme.notification) {
      window.Shopify.theme.notification.show(message, type);
    } else {
      // Fallback: create a simple notification
      const notification = document.createElement('div');
      notification.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 15px 20px;
        background: ${type === 'error' ? '#ff4444' : '#44ff44'};
